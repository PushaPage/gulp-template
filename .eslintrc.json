{
    "env": {
		"browser": true,
		"node": true,
        "commonjs": true,
		"es6": true,
		"jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015,
		"sourceType": "module"
	},
	"globals": {
		"Swiper": true,
		"OverlayScrollbars": true
    },
    "rules": {
        "indent": [2, "tab"],
        "linebreak-style": [2, "windows"],
        "quotes": [2, "single"],
        "semi": [2, "always"],
		"no-empty": 0,
		"no-mixed-spaces-and-tabs": 0
	}
}